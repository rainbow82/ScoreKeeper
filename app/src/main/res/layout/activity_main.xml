<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/reset_button_side_margins"
        android:layout_marginLeft="@dimen/reset_button_side_margins"
        android:layout_marginBottom="@dimen/reset_button_bottom_margin"
        android:background="@drawable/reset_button_shape"
        android:textColor="@color/button_text"
        android:textStyle="bold"
        android:textSize="@dimen/button_text"
        android:layout_centerHorizontal="true"
        android:text="@string/reset"
        android:onClick="reset"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/linear_layout_master">

        <LinearLayout
            android:layout_width="@dimen/layout_width"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="@dimen/text_padding"
                android:textSize="@dimen/team_name"
                android:textColor="@color/gryffindor"
                android:fontFamily="@font/harrypotter"
                android:text="@string/teamA" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gryfindor_png"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/team_a_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="@dimen/text_padding"
                android:textSize="@dimen/score_size"
                android:textColor="@color/score_color"
                android:fontFamily="@font/harrypotter"
                android:layout_marginTop="@dimen/score_margin_top"
                android:layout_marginBottom="@dimen/score_margin_bottom"
                android:text="@string/score" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/button_margin_bottom"
                android:layout_marginLeft="@dimen/button_side_margin"
                android:layout_marginRight="@dimen/button_side_margin"
                android:onClick="add_ten_points_team_a"
                android:background="@drawable/gryffindor_button_shape"
                android:textColor="@color/button_text"
                android:textStyle="bold"
                android:textSize="@dimen/button_text"
                android:text="@string/three_points" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/button_margin_bottom"
                android:layout_marginLeft="@dimen/button_side_margin"
                android:layout_marginRight="@dimen/button_side_margin"
                android:paddingLeft="@dimen/button_padding"
                android:paddingRight="@dimen/button_padding"
                android:background="@drawable/gryffindor_button_shape"
                android:textColor="@color/button_text"
                android:textStyle="bold"
                android:textSize="@dimen/button_text"
                android:onClick="add_one_hundred_fifty_points_team_a"
                android:text="@string/two_points" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/view">
        </View>

        <LinearLayout
            android:layout_width="@dimen/layout_width"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="@dimen/text_padding"
                android:textSize="@dimen/team_name"
                android:textColor="@color/slytherin"
                android:textStyle="bold"
                android:fontFamily="@font/harrypotter"
                android:text="@string/teamB" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/slytherin_png"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/team_b_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="@dimen/text_padding"
                android:textSize="@dimen/score_size"
                android:textColor="@color/score_color"
                android:fontFamily="@font/harrypotter"
                android:layout_marginTop="@dimen/score_margin_top"
                android:layout_marginBottom="@dimen/score_margin_bottom"
                android:text="@string/score" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/button_side_margin"
                android:layout_marginRight="@dimen/button_side_margin"
                android:layout_marginBottom="@dimen/button_margin_bottom"
                android:background="@drawable/slytherin_button_shape"
                android:textColor="@color/button_text"
                android:textStyle="bold"
                android:textSize="@dimen/button_text"
                android:onClick="add_ten_points_team_b"
                android:text="@string/three_points" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/button_margin_bottom"
                android:layout_marginLeft="@dimen/button_side_margin"
                android:layout_marginRight="@dimen/button_side_margin"
                android:background="@drawable/slytherin_button_shape"
                android:textColor="@color/button_text"
                android:textSize="@dimen/button_text"
                android:textStyle="bold"
                android:paddingLeft="@dimen/button_padding"
                android:paddingRight="@dimen/button_padding"
                android:onClick="add_one_hundred_fifty_points_team_b"
                android:text="@string/two_points" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>